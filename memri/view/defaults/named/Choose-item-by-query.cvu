.choose-item-by-query{
    title: "Choose a {type}"
    editMode: true
    [datasource = pod] {
       query: "{query}"
    }
    _editActionButton: toggleEditMode
    actionButton: addDataItem {
       arguments: { type: person }
    }
    defaultRenderer:list
    
    [renderer = list]{
        press: closePopup
    }
}
