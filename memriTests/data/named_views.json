[
    {
        "name": "filter-starred",
        "fromTemplate": "{view}",
        "queryOptions": {
            "query": "{computedView.queryOptions.query} AND starred = true"
        },
        "title": "Starred {computedView.title}"
    },
    
    {
        "name": "choose-item-by-query",
        "editMode": true,
        "queryOptions": {
            "query": "{query}"
        },
        "editActionButton": {
            "title": "{title}",
            "actionName": ["{actionName}", "back"],
            "_actionArgs": ["{actionArgs}"]
        },
        "actionButton": {
            "actionName": "add",
            "_actionArgs": [{
                "type": "{type}"
            }]
        },
        "rendererName": "list",
        "renderConfig": {
            "list": {
                "press": { "actionName": "noop" }
            }
        },
        "title": "Choose a {type}"
    },
    
    {
        "name": "shopping-notes",
        "views": [
            "all-notes",
            {
                "title": "Shopping Notes",
                "queryOptions": {
                    "query": "note AND title BEGINSWITH[c] 'shopping'"
                }
            }
        ]
    },
    
    {
        "name": "all-people",
        "views": [
            {
                "title": "All people",
                "queryOptions": {
                    "query": "person"
                }
            }
        ]
    },
    
    {
        "name": "all-items-with-label",
        "views": [
            {
                "title": "Items with label {name}",
                "queryOptions": {
                    "query": "* AND labels.uid = {uid}"
                }
            }
        ]
    }
]
