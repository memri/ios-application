{
    "templates": {
        "{[type:*]}": {
            
        },
        "{type:*}": {
            
        }
    },
    
    "defaults": {
        "{renderer:list}": {
            "renderConfigs": {
                "list": {
                    "slideLeftActions": [
                        { "actionName": "delete" }
                    ],
                    "press": { "actionName": "openView" },
                    "longPress": { "actionName": "select" },
                    "renderDescription": [
                        "VStack", { "padding": 5 }, [
                            "Text", { "value": "title", "bold": true },
                            "Text", {
                                "value": "content",
                                "bold": false,
                                "removeWhiteSpace": true,
                                "maxChar": 100
                            }
                        ]
                    ]
                }
            }
        },

        "{[type:note]}": {
            "name": "all-notes",
            "title": "All Notes",
            "queryOptions": {
                "query": "note",
                "sortProperty": "date-modified",
                "sortAscending": 0
            },
            "emptyResultText": "There are no notes here yet",
            "rendererName": "list",
            "renderConfigs": {
                "list": {
                    "sortProperty": "date-created",
                    "sortAscending": 0,
                    "itemRenderer": "{.title} {preview(.contents)} {.date-modified}"
                }
            },
            "actionButton": {
                "actionName": "add",
                "actionArgs": [{
                    "type": "note",
                    "title": "Untitled Note"
                }]
            },
            "editActionButton": { "actionName": "toggleEditMode" },
            "filterButtons": [
                { "actionName": "showStarred" },
                { "actionName": "toggleFilterPanel" }
            ]
        },

        "{type:note}": {
            "title": "{dataItem.title}",
            "rendererName": "richTextEditor",
            "renderConfigs": {
                "richtexteditor": {
                    "editorRenderer": "{VBox(Textbox(.title), Label(.date-modified), RichTextbox(.content))}"
                }
            },
            "editActionButton": { "actionName": "toggleEditMode" },
            "filterButtons": [
                {
                    "icon": "increase.indent",
                    "title": "Show Timeline",
                    "actionName": "openView",
                    "actionArgs": [{
                        "rendererName": "timeline",
                        "renderConfigs": {
                            "timeline": {
                                "timeProperty": "date-created"
                            }
                        },
                        "queryOptions": {
                            "query": "data:Log appliesTo:{.id}",
                            "sortProperty": "date-created",
                            "sortAscending": 0
                        }
                    }]
                },
                { "actionName": "showContextPane" }
            ],
            "contextButtons": [
                { "actionName": "star" },
                { "actionName": "schedule" }
            ],
            "actionItems": [
                {
                    "title": "Share with...",
                    "actionName": "showOverlay",
                    "actionArgs": ["shareWithPanel"]
                },
                {
                    "title": "Add to list...",
                    "actionName": "addToPanel",
                    "actionArgs": []
                },
                {
                    "title": "Duplicate Note",
                    "actionName": "duplicate",
                    "actionArgs": []
                }
            ],
            "navigateItems": [
                {
                    "title": "Timeline of this note",
                    "actionName": "openView",
                    "actionArgs": [{
                        "rendererName": "timeline",
                        "renderConfigs": {
                            "timeline": {
                                "timeProperty": "date-created"
                            }
                        },
                        "queryOptions": {
                            "query": "type:logitem appliesTo:{.id}",
                            "sortProperty": "date-created",
                            "sortAscending": 0
                        }
                    }]
                },
                {
                    "title": "Starred notes",
                    "actionName": "openDynamicView",
                    "actionArgs": [{
                        "name": "filter-starred",
                        "fromTemplate": "all-notes"
                    }]
                },
                {
                    "title": "All notes",
                    "actionName": "openViewByName",
                    "actionArgs": ["all-notes"]
                }
            ]
        },
        
        "{[type:logitem]}": {
            "name": "all-logitems",
            "title": "All Log Entries",
            "queryOptions": {
                "query": "logitem",
                "sortProperty": "date-modified",
                "sortAscending": 0
            },
            "emptyResultText": "There are no log entries here yet",
            "rendererName": "list",
            "renderConfigs": {
                "list": {
                    "sortProperty": "date-created",
                    "sortAscending": 0,
                    "renderDescription": {
                        "type": "vstack",
                        "children": [
                            {
                                "type": "hstack",
                                "children": [
                                    {
                                        "type": "text",
                                        "property": "action",
                                        "bold": true
                                    },
                                    {
                                        "type": "text",
                                        "property": "date",
                                        "bold": true
                                    }
                                ]
                            },
                            {
                                "type": "text",
                                "property": "contents",
                                "bold": false,
                                "removeWhiteSpace": true,
                                "maxChar": 100
                            }
                        ]
                    }
                }
            },
            "editActionButton": { "actionName": "toggleEditMode" },
            "filterButtons": [
                { "actionName": "showStarred" },
                { "actionName": "toggleFilterPanel" }
            ]
        },
    },
    
    "user": {
        "{type:note}": {
            "renderConfigs": {
                "list": {
                    "slideRightActions": [
                        { "actionName": "schedule" }
                    ]
                }
            }
        }
    }
}
