{
    "templates": {
        "{[type:*]}": {
            
        },
        "{type:*}": {
            
        }
    },
    
    "defaults": {
        "{renderer:list}": {
            "renderConfigs": {
                "list": {
                    "slideLeftActions": [
                        { "actionName": "delete" }
                    ],
                    "press": { "actionName": "openView" },
                    "longPress": { "actionName": "select" },
                    "renderDescription": [
                        "VStack", { "padding": 5 }, [
                            "Text", { "text": "{.title}", "bold": true },
                            "Text", {
                                "text": "{.content}",
                                "bold": false,
                                "removeWhiteSpace": true,
                                "maxChar": 100
                            }
                        ]
                    ]
                }
            }
        },

        "{[type:note]}": {
            "name": "all-notes",
            "title": "All Notes",
            "queryOptions": {
                "query": "note",
                "sortProperty": "dateModified",
                "sortAscending": 0
            },
            "emptyResultText": "There are no notes here yet",
            "rendererName": "list",
            "renderConfigs": {
                "list": {
                    "sortProperty": "dateCreated",
                    "sortAscending": 0,
                    "renderDescription": [
                        "VStack", {
                            "alignment": "left",
                            "rowInset": [12, 20, -12, 20]
                        }, [
                            "Text", {
                                "text": "{.title}",
                                "font": [18, "semibold"],
                                "color": "#333",
                                "padding": [0, 0, 3, 0]
                            },
                            "Text", {
                                "text": "{.content}",
                                "removeWhiteSpace": true,
                                "maxChar": 100,
                                "color": "#555",
                                "font": [14, "regular"]
                            },
                            "Text", {
                                "text": "Just now {.dateModified}",
                                "font": [11, "regular"],
                                "color": "#888",
                                "padding": [8,0,5,0]
                            },
                            "Rectangle", {
                                "size": [0, 1],
                                "color": "#efefef",
                                "padding": [7, 0, 12, 0]
                            }
                        ]
                    ]
                }
            },
            "actionButton": {
                "actionName": "add",
                "actionArgs": [{
                    "type": "note",
                    "title": "Untitled Note"
                }]
            },
            "editActionButton": { "actionName": "toggleEditMode" },
            "filterButtons": [
                { "actionName": "showStarred" },
                { "actionName": "toggleFilterPanel" }
            ]
        },

        "{type:note}": {
            "title": "{dataItem.title}",
            "rendererName": "richTextEditor",
            "renderConfigs": {
                "richtexteditor": {
                    "editorRenderer": "{VBox(Textbox(.title), Label(.dateModified), RichTextbox(.content))}"
                }
            },
            "editActionButton": { "actionName": "toggleEditMode" },
            "filterButtons": [
                {
                    "icon": "increase.indent",
                    "title": "Show Timeline",
                    "actionName": "openView",
                    "actionArgs": [{
                        "rendererName": "timeline",
                        "renderConfigs": {
                            "timeline": {
                                "timeProperty": "dateCreated"
                            }
                        },
                        "queryOptions": {
                            "query": "data:Log appliesTo:{.id}",
                            "sortProperty": "dateCreated",
                            "sortAscending": 0
                        }
                    }]
                },
                { "actionName": "showContextPane" }
            ],
            "contextButtons": [
                { "actionName": "star" },
                { "actionName": "schedule" }
            ],
            "actionItems": [
                {
                    "title": "Share with...",
                    "actionName": "showOverlay",
                    "actionArgs": ["shareWithPanel"]
                },
                {
                    "title": "Add to list...",
                    "actionName": "addToPanel",
                    "actionArgs": []
                },
                {
                    "title": "Duplicate Note",
                    "actionName": "duplicate",
                    "actionArgs": []
                }
            ],
            "navigateItems": [
                {
                    "title": "Timeline of this note",
                    "actionName": "openView",
                    "actionArgs": [{
                        "rendererName": "timeline",
                        "renderConfigs": {
                            "timeline": {
                                "timeProperty": "dateCreated"
                            }
                        },
                        "queryOptions": {
                            "query": "type:logitem appliesTo:{.id}",
                            "sortProperty": "dateCreated",
                            "sortAscending": 0
                        }
                    }]
                },
                {
                    "title": "Starred notes",
                    "actionName": "openDynamicView",
                    "actionArgs": [{
                        "name": "filter-starred",
                        "fromTemplate": "all-notes"
                    }]
                },
                {
                    "title": "All notes",
                    "actionName": "openViewByName",
                    "actionArgs": ["all-notes"]
                }
            ]
        },
        
        "{[type:logitem]}": {
            "name": "all-logitems",
            "title": "All Log Entries",
            "queryOptions": {
                "query": "logitem",
                "sortProperty": "dateModified",
                "sortAscending": 0
            },
            "emptyResultText": "There are no log entries here yet",
            "rendererName": "list",
            "renderConfigs": {
                "list": {
                    "sortProperty": "dateCreated",
                    "sortAscending": 0,
                    "renderDescription": [
                        "VStack", { "padding": 5 }, [
                            "HStack", [
                                "Text", { "text": "{.action}", "bold": true },
                                "Text", { "text": "{.date}" }
                            ],
                            "Text", {
                                "text": "{.contents}",
                                "bold": false,
                                "removeWhiteSpace": true,
                                "maxChar": 100
                            }
                        ]
                    ]
                }
            },
            "editActionButton": { "actionName": "toggleEditMode" },
            "filterButtons": [
                { "actionName": "showStarred" },
                { "actionName": "toggleFilterPanel" }
            ]
        },
        
        "{[type:label]}": {
            "name": "all-labels",
            "title": "All Labels",
            "queryOptions": {
                "query": "label",
                "sortProperty": "dateAccessed",
                "sortAscending": 0
            },
            "emptyResultText": "You have not added any labels yet",
            "rendererName": "list",
            "renderConfigs": {
                "list": {
                    "sortProperty": "dateCreated",
                    "sortAscending": 0,
                    "renderDescription": [
                        "VStack", { "rowInset": [0, 20, 0, 20] }, [
                            "HStack", {
                                "alignment": "bottom",
                                "padding": 5
                            }, [
                                "VStack", {
                                    "alignment": "left",
                                    "spacing": 5
                                }, [
                                    "Text", { "text": "{.name}", "bold": true },
                                    "Text", {
                                        "text": "{.comment}",
                                        "removeWhiteSpace": true,
                                        "maxChar": 100
                                    }
                                ],
                                "Spacer",
                                "RoundedRectangle", {
                                    "color": "{.color}",
                                    "size": [25, 25],
                                    "v-align": "center",
                                    "padding": [0,10,0,0]
                                }
                            ],
                            "Divider", { "padding": [5, 0, 5, 0] }

                        ]
                    ]
                }
            },
            "actionButton": {
                "actionName": "add",
                "actionArgs": [{
                    "type": "label",
                    "name": "new label"
                }]
            },
            "editActionButton": { "actionName": "toggleEditMode" },
            "filterButtons": [
                { "actionName": "showStarred" },
                { "actionName": "toggleFilterPanel" }
            ]
        },
    },
    
    "user": {
        "{type:note}": {
            "renderConfigs": {
                "list": {
                    "slideRightActions": [
                        { "actionName": "schedule" }
                    ]
                }
            }
        }
    }
}
